<h1>Add a new course</h1>

<form action="/add" method="POST">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" required>
        <label for="title">Title</label>
        <span class="helper-text" data-error="Please, type a title of this course"></span>
    </div>

    <div class="input-field">
        <input id="price" name="price" type="number" class="validate" required min="1">
        <label for="price">Price</label>
        <span class="helper-text" data-error="Please, type a price of this course"></span>
    </div>

    <div class="input-field">
        <input id="img" name="img" type="text" class="validate" required>
        <label for="img">URL pictures</label>
        <span class="helper-text" data-error="Please, type URL of the picture"></span>
    </div>

    <button class="btn btn-primary">Add course</button>
</form>